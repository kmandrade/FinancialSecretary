{
  "name": "@investalerta/api",
  "version": "1.0.0",
  "description": "InvestAlerta API - Backend para monitoramento de ativos (Cloudflare Workers)",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "db:create": "wrangler d1 create investalerta-db",
    "db:migrate": "wrangler d1 execute investalerta-db --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute investalerta-db --local --file=./schema.sql",
    "db:studio": "wrangler d1 studio investalerta-db",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "wrangler": "^3.99.0"
  }
}
